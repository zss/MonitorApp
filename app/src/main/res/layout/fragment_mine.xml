<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/main_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/dp16"
        android:background="?attr/layout_item_bg"
        android:layout_marginTop="@dimen/dp10"
        android:layout_height="wrap_content"
        android:id="@+id/lay_user_info">
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/iv_logo"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp10"

            android:textSize="@dimen/sp16"
            android:textColor="@color/textColor"
            android:text="大叔"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@id/iv_logo"
            android:textSize="@dimen/sp16"
            android:textColor="@color/textColor"
            android:text="艺考号：00001"
            android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="?attr/layout_item_bg"
        android:layout_marginTop="@dimen/dp10"
        android:padding="@dimen/dp16"
        android:layout_height="wrap_content"
        android:id="@+id/lay_mine_ver_card">
        <ImageView
            android:id="@+id/iv_mine_ver_card"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_home_blue_400_24dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="我的合格证"
            android:layout_toRightOf="@id/iv_mine_ver_card"
            android:layout_centerVertical="true"
            android:textColor="@color/textColor"
            android:textSize="@dimen/sp16"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="?attr/layout_item_bg"
        android:layout_marginTop="@dimen/dp10"
        android:padding="@dimen/dp16"
        android:layout_height="wrap_content"
        android:id="@+id/lay_comment">
        <ImageView
            android:id="@+id/iv_mine_comment"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_home_blue_400_24dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="我的点赞和评论"
            android:layout_toRightOf="@id/iv_mine_comment"
            android:layout_centerVertical="true"
            android:textColor="@color/textColor"
            android:textSize="@dimen/sp16"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="?attr/layout_item_bg"
        android:layout_marginTop="@dimen/dp10"
        android:padding="@dimen/dp16"
        android:layout_height="wrap_content"
        android:id="@+id/lay_msg">
        <ImageView
            android:id="@+id/iv_mine_msg"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_home_blue_400_24dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="我的消息"
            android:layout_toRightOf="@id/iv_mine_msg"
            android:layout_centerVertical="true"
            android:textColor="@color/textColor"
            android:textSize="@dimen/sp16"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="?attr/layout_item_bg"
        android:layout_marginTop="@dimen/dp10"
        android:padding="@dimen/dp16"
        android:layout_height="wrap_content"
        android:id="@+id/lay_setting">
        <ImageView
            android:id="@+id/iv_mine_setting"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_home_blue_400_24dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="我的设置"
            android:layout_toRightOf="@id/iv_mine_setting"
            android:layout_centerVertical="true"
            android:textColor="@color/textColor"
            android:textSize="@dimen/sp16"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>